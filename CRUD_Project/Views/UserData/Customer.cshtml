    .like {
        margin-right: 10px;
    }

    .remove{
        margin-right: 10px;
    }

    .people {
        margin-right: 10px;
    }

    /* Modal 自定義樣式 */
    .modal-xl {
        max-width: 90%;
    }

    #tbPeopleInfo {
        font-size: 14px;
    }

    .badge {
        font-size: 12px;
    }
</style>
