<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>isERP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/isErp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <!-- Sidebar toggle button for small screens -->
            <button class="btn btn-dark d-md-none me-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar">
                <i class="fas fa-bars"></i>
            </button>

            <!-- Brand -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/island_Logo.svg" alt="Island Logo" style="height: 50px;" />
            </a>

            <!-- Search -->
            <form class="d-none d-md-flex ms-auto me-3">
                <input class="form-control me-2" type="search" placeholder="Search for..." aria-label="Search" />
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i></button>
            </form>

            <!-- User dropdown -->
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user fa-fw"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Settings">Settings</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="ActivityLog">Activity Log</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar for md+ -->
    <div class="d-none d-md-block bg-dark text-white position-fixed vh-100 sidebar" style="width: 240px; top: 56px;">
        <div class="p-3">
            <div class="text-uppercase small mb-2">客戶</div>
            <a class="d-block text-white mb-1" asp-controller="UserData" asp-action="Customer">
                <i class="fas fa-tachometer-alt me-2"></i> 客戶管理
            </a>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="CustModel">
                <i class="fas fa-tachometer-alt me-2"></i> 客戶測試模板
            </a>

            <div class="text-uppercase small mb-2">商品</div>
            <a class="d-block text-white mb-1" asp-controller="UserData" asp-action="List">
                <i class="fas fa-users me-2"></i> 人員清單
            </a>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="IndexPage">
                <i class="fas fa-columns me-2"></i> 人員清單(分頁)
            </a>

            <div class="text-uppercase small mb-2">報價</div>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="BootstrapTableList">
                <i class="fas fa-table me-2"></i> 清單(Bootstrap table)
            </a>

            <div class="text-uppercase small mb-2">訂單</div>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="#">
                <i class="fas fa-shopping-cart me-2"></i> 訂購單維護
            </a>

            <div class="small border-top pt-2 mt-4">Logged in as:<br />Test User</div>
        </div>
    </div>

    <!-- Offcanvas sidebar for mobile -->
    <div class="offcanvas offcanvas-start bg-dark text-white" tabindex="-1" id="offcanvasSidebar">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">選單</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div class="text-uppercase small mb-2">客戶</div>
            <a class="d-block text-white mb-1" asp-controller="UserData" asp-action="Customer">
                <i class="fas fa-tachometer-alt me-2"></i> 客戶管理
            </a>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="CustModel">
                <i class="fas fa-tachometer-alt me-2"></i> 客戶測試模板
            </a>

            <div class="text-uppercase small mb-2">商品</div>
            <a class="d-block text-white mb-1" asp-controller="UserData" asp-action="List">
                <i class="fas fa-users me-2"></i> 人員清單
            </a>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="IndexPage">
                <i class="fas fa-columns me-2"></i> 人員清單(分頁)
            </a>

            <div class="text-uppercase small mb-2">報價</div>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="BootstrapTableList">
                <i class="fas fa-table me-2"></i> 清單(Bootstrap table)
            </a>

            <div class="text-uppercase small mb-2">訂單</div>
            <a class="d-block text-white mb-3" asp-controller="UserData" asp-action="#">
                <i class="fas fa-shopping-cart me-2"></i> 訂購單維護
            </a>

            <div class="small border-top pt-2 mt-4">Logged in as:<br />Test User</div>
        </div>
    </div>

    <!-- Main Content -->
    <main class="pt-4" style="margin-left: 0; padding-top: 70px;">
        <div class="container-fluid" style="margin-left: 0; margin-right: 0; max-width: 100%;">
            <div class="row">
                <div class="col-md-9 offset-md-3 col-lg-10 offset-lg-2">
                    @await Html.PartialAsync("_Breadcrumb.cshtml")
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>